package org.example.devices;
import javafx.fxml.FXML;
import javafx.scene.control.*;


public class HelloController {
    @FXML
    private ListView<String> listView;
    @FXML
    private TextField smartphoneName, smartphoneWeight, smartphonePrice, screenSize, cameraResolution;
    @FXML
    private TextField tabletName, tabletWeight, tabletPrice, batteryLife;
    @FXML
    private TextField laptopName, laptopWeight, laptopPrice, ramSize, processorType;
    @FXML
    private Button addButton, removeButton;
    @FXML
    public void initialize() {
        addButton.setOnAction(e -> addDevice());
        removeButton.setOnAction(e -> {
            int selectedIndex = listView.getSelectionModel().getSelectedIndex();
            if (selectedIndex >= 0) {
                listView.getItems().remove(selectedIndex);
            }
        });
    }
    private void addDevice() {
        String deviceInfo;
        if (!smartphoneName.getText().isEmpty()) {
            deviceInfo = String.format("Smartphone: %s, Weight: %s, Price: %s, Screen: %s, Camera: %s",
                    smartphoneName.getText(), smartphoneWeight.getText(), smartphonePrice.getText(),
                    screenSize.getText(), cameraResolution.getText());
        } else if (!tabletName.getText().isEmpty()) {
            deviceInfo = String.format("Tablet: %s, Weight: %s, Price: %s, Battery: %s",
                    tabletName.getText(), tabletWeight.getText(), tabletPrice.getText(), batteryLife.getText());
        } else if (!laptopName.getText().isEmpty()) {
            deviceInfo = String.format("Laptop: %s, Weight: %s, Price: %s, RAM: %s, Processor: %s",
                    laptopName.getText(), laptopWeight.getText(), laptopPrice.getText(),
                    ramSize.getText(), processorType.getText());
        } else {
            deviceInfo = "Unknown device";
        }

        listView.getItems().add(deviceInfo);
        clearFields();
    }

    private void clearFields() {
        smartphoneName.clear();
        smartphoneWeight.clear();
        smartphonePrice.clear();
        screenSize.clear();
        cameraResolution.clear();

        tabletName.clear();
        tabletWeight.clear();
        tabletPrice.clear();
        batteryLife.clear();

        laptopName.clear();
        laptopWeight.clear();
        laptopPrice.clear();
        ramSize.clear();
        processorType.clear();
    }
}
